    "webpack-cli":                        "^3.2.3"
  },
  "engines":         {
    "node": ">=11.0.0"
  },
  "scripts":         {
    "lint":      "eslint **/*.mjs | stylelint **/*.scss",
    "test":      "mocha tests/*Test.js --exit",
